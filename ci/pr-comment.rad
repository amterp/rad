#!/usr/bin/env rad
---
Generates PR comment summarizing test results and binary size changes.
Reads data from GitHub Actions environment and temp files.
---

print("ðŸ’¬ Generating PR comment...")

// Read test results from GitHub Actions environment
tests_passed = get_env("TESTS_PASSED") == "true"
tests_job_url = get_env("TESTS_JOB_URL")
cross_platform_passed = get_env("CROSS_PLATFORM_PASSED") == "true"
binary_job_url = get_env("BINARY_JOB_URL")
benchmark_job_url = get_env("BENCHMARK_JOB_URL")

// Get commit hashes for comparison
pr_commit = get_env("GITHUB_SHA")
base_commit = get_env("GITHUB_BASE_SHA")

// Truncate commit hashes to 7 characters for display
pr_commit_short = pr_commit ? pr_commit[:7] : "unknown"
base_commit_short = base_commit ? base_commit[:7] : "unknown"

// Read binary size data
binary_file = read_file("/tmp/binary-size.json")
if type_of(binary_file) == "error":
    print_err("âŒ Could not read binary size data: {binary_file}")
    exit(1)

binary_data = parse_json(binary_file.content)
if type_of(binary_data) == "error":
    print_err("âŒ Could not parse binary size data: {binary_data}")
    exit(1)

// Read benchmark data (optional - may not exist if benchmark job failed)
benchmark_data = null
benchmark_file = read_file("/tmp/benchmark-comparison.json") catch:
    print("âš ï¸ Benchmark data not available: {benchmark_file}")
    print("ðŸ“ This is normal if the benchmark job failed or was skipped")
if type_of(benchmark_file) != "error":
    benchmark_data = parse_json(benchmark_file.content)
    if type_of(benchmark_data) == "error":
        print("âš ï¸ Could not parse benchmark data: {benchmark_data}")
        benchmark_data = null

// Determine test status icon and message
test_icon = tests_passed ? "âœ…" : "âŒ"
test_message = tests_passed ? "All tests passed" : "Tests failed"
test_link = tests_job_url ? " ([view logs]({tests_job_url}))" : ""

// Determine cross-platform test status
cross_platform_icon = cross_platform_passed ? "âœ…" : "âŒ"
cross_platform_message = cross_platform_passed ? "macOS & Windows tests passed" : "Cross-platform tests failed"

// Determine binary size change significance for rad
rad_size_change_icon = get_size_change_icon(binary_data.rad.diff_percent)

// Determine binary size change significance for radls
radls_size_change_icon = "ðŸ†•"
if binary_data.radls.diff_percent != null:
    radls_size_change_icon = get_size_change_icon(binary_data.radls.diff_percent)

// Generate benchmark section
benchmark_section = ""
if benchmark_data != null:
    if len(benchmark_data.comparisons) > 0:
        benchmark_section = """
### ðŸƒ Performance Benchmarks
| Benchmark | Base ({base_commit_short}) | PR ({pr_commit_short}) | Change |
|-----------|------|----|---------"""

        for comparison in benchmark_data.comparisons:
            change_icon = get_performance_change_icon(comparison.diff_percent)
            benchmark_section += "\n| {comparison.name} | {comparison.base_mean_ms}ms | {comparison.pr_mean_ms}ms | {change_icon} {format_perf_diff(comparison.diff_ms)}ms ({format_percent(comparison.diff_percent)}%) |"

        if benchmark_data.has_regressions:
            benchmark_section += "\n\nâš ï¸ **Performance regressions detected!** Some benchmarks are >10% slower."

        if benchmark_job_url:
            benchmark_section += "\n\nðŸƒ [View benchmark details]({benchmark_job_url})"
    else:
        benchmark_section = "\n### ðŸƒ Performance Benchmarks\nâŒ No benchmark data available"
else:
    benchmark_section = "\n### ðŸƒ Performance Benchmarks\nâš ï¸ Benchmark job failed or was skipped"
    if benchmark_job_url:
        benchmark_section += " ([view logs]({benchmark_job_url}))"

// Generate radls change text (handle new binary case)
radls_base_text = binary_data.radls.base_size != null ? format_kb(binary_data.radls.base_size) : "N/A"
radls_change_text = binary_data.radls.diff_percent != null ? "{radls_size_change_icon} {format_diff(binary_data.radls.diff_bytes)} ({format_percent(binary_data.radls.diff_percent)}%)" : "ðŸ†• New binary"

// Generate the comment content
comment = """
## ðŸ” PR Checks Summary

### {test_icon} Tests (Linux)
{test_message}{test_link}

### {cross_platform_icon} Cross-Platform Tests
{cross_platform_message}

### ðŸ“Š Binary Size Impact (linux/amd64)
| Binary | Base ({base_commit_short}) | PR ({pr_commit_short}) | Change |
|--------|------|----|---------|
| rad | {format_kb(binary_data.rad.base_size)} | {format_kb(binary_data.rad.pr_size)} | {rad_size_change_icon} {format_diff(binary_data.rad.diff_bytes)} ({format_percent(binary_data.rad.diff_percent)}%) |
| radls | {radls_base_text} | {format_kb(binary_data.radls.pr_size)} | {radls_change_text} |

{binary_job_url ? "ðŸ“ˆ [View size comparison details]({binary_job_url})" : ""}

{benchmark_section}
"""

// Write comment to file for GitHub Actions
comment_result = write_file("/tmp/pr-comment.txt", comment)
if type_of(comment_result) == "error":
    print_err("âŒ Failed to write PR comment: {comment_result}")
    exit(1)

print("âœ… PR comment generated successfully")
print("---")
print(comment)

fn get_size_change_icon(percent):
    abs_percent = abs(percent)
    if abs_percent >= 10:
        return percent > 0 ? "ðŸ”º" : "ðŸ”»"
    else if abs_percent >= 5:
        return percent > 0 ? "ðŸ”¸" : "ðŸ”¹"
    else if abs_percent >= 1:
        return percent > 0 ? "ðŸ“ˆ" : "ðŸ“‰"
    else:
        return "âž¡ï¸"

fn format_kb(bytes):
    kb = round(bytes / 1024.0, 3)
    return "{kb} KB"

fn format_diff(diff_bytes):
    sign = diff_bytes >= 0 ? "+" : ""
    kb = round(abs(diff_bytes) / 1024.0, 3)
    return "{sign}{kb} KB"

fn format_percent(percent):
    return str(round(percent, 3))

fn get_performance_change_icon(percent):
    abs_percent = abs(percent)
    if abs_percent >= 10:
        return percent > 0 ? "ðŸ”º" : "ðŸ”»"
    else if abs_percent >= 5:
        return percent > 0 ? "ðŸ”¸" : "ðŸ”¹"
    else if abs_percent >= 1:
        return percent > 0 ? "ðŸ“ˆ" : "ðŸ“‰"
    else:
        return "âž¡ï¸"

fn format_perf_diff(diff_ms):
    sign = diff_ms >= 0 ? "+" : ""
    return "{sign}{round(abs(diff_ms), 2)}"