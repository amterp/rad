{
  "name": "rsl-extension",
  "displayName": "RSL Language Pack",
  "description": "Language support for RSL (Rad Scripting Language).",
  "author": "Alexander Terp",
  "publisher": "amterp",
  "license": "MIT",
  "version": "0.0.15",
  "repository": {
    "type": "git",
    "url": "https://github.com/amterp/rad"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {},
    "languages": [
      {
        "id": "rsl",
        "aliases": [
          "RSL",
          "rsl",
          "Rad Scripting Language",
          "Rsl"
        ],
        "extensions": [
          ".rsl",
          ".rad"
        ],
        "configuration": "./language-configuration.json",
        "firstLine": "^#!/usr/bin/env rad"
      }
    ],
    "grammars": [
      {
        "language": "rsl",
        "scopeName": "source.rsl",
        "path": "./syntaxes/rsl.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
