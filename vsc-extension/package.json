{
  "name": "rad-extension",
  "displayName": "Rad (Language Support)",
  "description": "Language support for Rad, a modern CLI scripting language.",
  "author": "Alexander Terp",
  "publisher": "amterp",
  "license": "MIT",
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/amterp/rad"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "multi-root"
  ],
  "engines": {
    "vscode": "^1.75.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {},
    "languages": [
      {
        "id": "rad",
        "aliases": [
          "Rad",
          "Rad Scripting Language",
          "Rad Script"
        ],
        "extensions": [
          ".rad",
          ".rsl"
        ],
        "configuration": "./language-configuration.json",
        "firstLine": "^#!/usr/bin/env rad"
      }
    ],
    "grammars": [
      {
        "language": "rad",
        "scopeName": "source.rad",
        "path": "./syntaxes/rad.tmLanguage.json"
      }
    ],
    "configurationDefaults": {
      "[rad]": {
        "editor.insertSpaces": true,
        "editor.tabSize": 4
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "postinstall": "cd client && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  }
}
